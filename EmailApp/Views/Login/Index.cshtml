@model LoginViewModel
@{
    ViewData["Title"] = "Index";

}

<h1>Giriş Yapma Sayfası</h1>

<form method="post">
    <div class="form-group">
        <label>Email</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>

    <span class="text-danger">@Html.ValidationSummary()</span>
    <button class="btn btn-success">Giriş Yap</button>

</form>

