@model List<Message>
@{
    ViewData["Title"] = "Gelen Kutusu";
    Layout = "~/Views/MainLayout/Layout.cshtml";   
    var count = 0;
    
}
@{
    var back = Context.Request.Path + Context.Request.QueryString;
}

<div class="col-md-9">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h4 class="card-title text-primary">Gelen Mesajlar</h4>

            <div class="card-tools">
                <div class="input-group input-group-sm">
                    <input type="text" class="form-control" placeholder="Mail Ara">
                    <div class="input-group-append">
                        <div class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-tools -->
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <div class="mailbox-controls">
                <!-- Check all button -->
                
                <div class="btn-group">
                    <button type="button" class="btn btn-default btn-sm"><i class="far fa-trash-alt"></i></button>                                    
                </div>
                <!-- /.btn-group -->
                <button type="button" class="btn btn-default btn-sm"><i class="fas fa-sync-alt"></i></button>
                <div class="float-right">
                    1-50/200
                    <div class="btn-group">
                        <button type="button" class="btn btn-default btn-sm"><i class="fas fa-chevron-left"></i></button>
                        <button type="button" class="btn btn-default btn-sm"><i class="fas fa-chevron-right"></i></button>
                    </div>
                    <!-- /.btn-group -->
                </div>
                <!-- /.float-right -->
            </div>
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped">
                    <tbody>
                        @foreach(var item in Model)
                        {
                            count++;
                            <tr>
                            <td>
                               @count
                            </td>
                                <td class="text-center align-middle">
                                    <span class="badge @(item.IsRead ? "badge-success" : "badge-danger")">
                                        @(item.IsRead ? "Okundu" : "Okunmadı")
                                    </span>
                                </td>

                                <td class="text-center align-middle">
                                    <form method="post" action="/Message/ToggleStar" class="d-inline">
                                        <input type="hidden" name="id" value="@item.MessageId" />
                                        <input type="hidden" name="redirect" value="@back" />
                                        <button type="submit" class="btn btn-link p-0" title="Yıldız Aç/Kapa">
                                            <i class="@(item.IsStarred ? "fas fa-star text-warning" : "far fa-star text-muted")"></i>
                                        </button>
                                    </form>
                                </td>
                            <td class="mailbox-name"><a href="/Message/MessageDetail/@item.MessageId">@item.Sender.FirstName @item.Sender.LastName</a></td>
                            <td class="mailbox-subject">
                                <b>@item.Subject</b>
                            </td>
                            <td class="mailbox-attachment"></td>
                                <td class="mailbox-flag">
                                    <form method="post" action="/Message/ToggleFlag" class="d-inline">
                                        <input type="hidden" name="id" value="@item.MessageId" />
                                        <input type="hidden" name="redirect" value="@back" />
                                        <button type="submit" class="btn btn-link p-0" title="Bayrak Aç/Kapa">
                                            <i class="@(item.IsFlag ? "fas fa-flag text-danger" : "far fa-flag text-muted")"></i>
                                        </button>
                                    </form>
                                </td>
                            <td class="mailbox-date">@item.SendDate.ToShortDateString()</td>
                        </tr>
                        }
                                             
                    </tbody>
                </table>
                <!-- /.table -->
            </div>
            <!-- /.mail-box-messages -->
        </div>
        <!-- /.card-body -->
    
    <!-- /.card -->
</div>